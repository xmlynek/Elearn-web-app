{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "typeRoots": [
            "src/types",
            "./node_module/@types"
        ],
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "types": [
            "node",
        ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./src/types/express/index.d.ts",
        "./src/types/env/environment.d.ts"
    ]
}